{% extends '::admin_base.html.twig' %}

{% block body -%}
    <h1>Lista ofert</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Cena</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_offer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.shortDescriptionContent(10) }}</td>
                <td>{{ entity.price }}</td>
                <td>

                        <a class="tiny button" href="{{ path('admin_offer_show', { 'id': entity.id }) }}">show</a>

                        <a class="tiny button" href="{{ path('admin_offer_edit', { 'id': entity.id }) }}">edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a class="button" href="{{ path('admin_offer_new') }}">
                Dodaj ofertÄ™
            </a>

    {% endblock %}

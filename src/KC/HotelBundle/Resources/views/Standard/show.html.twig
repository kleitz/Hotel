{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Standard</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Standardname</th>
                <td>{{ entity.standardName }}</td>
            </tr>
            <tr>
                <th>Priceforbed</th>
                <td>{{ entity.priceForBed }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_standard') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_standard_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}

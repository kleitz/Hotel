{% extends '::frontend_base.html.twig' %}

{% block body -%}
    <h1>Lista ofert</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Cena</th>
                <th>Pokaz szczegoly</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.shortDescriptionContent(10) }}</td>
                <td>{{ entity.price }}</td>
                <td><a class="tiny button" href="{{ path('offer_show', { 'id': entity.id }) }}">Pokaz</a></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}

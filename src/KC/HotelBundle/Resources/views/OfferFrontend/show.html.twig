{% extends '::frontend_base.html.twig' %}

{% block body -%}
    <h1> {{ entity.name }} </h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Opis</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Cena</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Rezerwacja</th>
                <td><a href="{{ path('offer_booking', { 'id': entity.id }) }}">Rezerwuj</a></td>
            </tr>
        </tbody>
    </table>

{% endblock %}

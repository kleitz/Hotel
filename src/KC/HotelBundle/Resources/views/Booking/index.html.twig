{% extends '::admin_base.html.twig' %}

{% block body -%}
    <h1>Rezerwacje</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Data złożenia rezerwacji</th>
                <th>Data zameldowania</th>
                <th>Data wymeldowania</th>
                <th>Cena</th>
                <th>Status</th>
                <th>Pokoj</th>
                <th>Klient</th>
                <th>Oferta</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_booking_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.bookingDate %}{{ entity.bookingDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.checkInDate %}{{ entity.checkInDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.checkOutDate %}{{ entity.checkOutDate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.room  }}</td>
                <td>{{ entity.client }}</td>
                <td>
                    {% if entity.offer %}
                        {{ entity.offer }}
                    {% else %}
                         Nie dotyczy
                    {% endif %}
                </td>
                <td>

                        <a class="tiny button" href="{{ path('admin_booking_show', { 'id': entity.id }) }}">show</a>
                    
                        <a class="tiny button" href="{{ path('admin_booking_edit', { 'id': entity.id }) }}">edit</a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a class="button" href="{{ path('admin_booking_new') }}">
                Stwórz nowa rezerwacje
            </a>
            
            
{% endblock %}

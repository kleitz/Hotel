{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Booking list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Bookingdate</th>
                <th>Checkindate</th>
                <th>Checkoutdate</th>
                <th>Price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_booking_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.bookingDate %}{{ entity.bookingDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.checkInDate %}{{ entity.checkInDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.checkOutDate %}{{ entity.checkOutDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.status }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_booking_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_booking_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_booking_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
